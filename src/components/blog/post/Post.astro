---
import type { CollectionEntry } from "astro:content";
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/header/Header.astro";
import Footer from "@components/Footer.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main>
      <article>
        <a href="/blog" class="blog-a-tag blog-back-butto"> ⬅️ Volver</a>
        <div class="blog-prose">
          <div class="blog-title">
            <h1 id="blog-back-button-id">{title}</h1>
            <div class="blog-date">
              <time datetime={pubDate.toISOString()}>
                {
                  pubDate.toLocaleDateString("en-us", {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                  })
                }
              </time>
            </div>
            <hr />
          </div>
          <div class="hero-image">
            {heroImage && <img src={heroImage} />}
          </div>

          <slot />
          <a href="#blog-back-button-id" class="blog-a-tag">
            <div class="blog-go-top-button">Volver al inicio</div>
          </a>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    width: calc(100% - 2em);
    max-width: 100%;
    margin: 0;
  }

  .blog-a-tag {
    text-decoration: none;
    color: inherit;
  }

  .blog-go-top-button {
    display: flex;
    justify-self: center;
    justify-content: center;
    align-items: center;

    margin: 2rem;

    width: 200px;
    height: 75px;
    border-radius: 16px;

    background-color: #000000;
    background: radial-gradient(
      circle,
      rgb(8, 8, 8) 0%,
      rgba(12, 12, 12, 1) 100%
    );
    box-shadow: 3px 3px 4px -1px rgba(255, 255, 255, 0.11) inset;

    border: 4px solid;
    border-color: #080808;
  }

  .blog-prose {
    max-width: 960px;
  }

  .blog-title {
    text-align: start;
  }

  .blog-date {
    margin-bottom: 24px;
  }

  .blog-title h1 {
    margin-bottom: 24px;
  }
  main {
    display: flex;
    justify-content: center;
    justify-self: center;
    padding: 0px;
    font-size: 1.5rem;
    margin: auto;
  }
  article {
    width: 846px;

    padding: 5rem 5rem 0 5rem;
    background-color: #000000;

    border-left: 4px solid;
    border-right: 4px solid;
    border-color: #080808;
  }

  .hero-image img {
    width: 100%;
    max-height: 250px;
  }

  .blog-back-butto {
  }

  @media (max-width: 768px) {
    main {
      width: 100%;
      font-size: 1rem;
    }

    article {
      padding: 3rem 1rem 1rem 1rem;
    }

    .blog-go-top-button {
      font-size: 1.4rem;
      margin: 1rem;
    }
  }
</style>
